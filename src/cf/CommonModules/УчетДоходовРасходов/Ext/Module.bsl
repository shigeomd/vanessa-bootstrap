	Проводки        = Движения.Хозрасчетный;
	
	СтатьяКурсовыеРазницы   = ОбщегоНазначенияКлиентСервер.ПредопределенныйЭлемент("Справочник.ПрочиеДоходыИРасходы.КурсовыеРазницы");
	СтатьяКурсовыеРазницыУЕ = ОбщегоНазначенияКлиентСервер.ПредопределенныйЭлемент("Справочник.ПрочиеДоходыИРасходы.КурсовыеРазницыПоРасчетамВУЕ");
	
	Для каждого СтрокаПереоценка Из ТаблицаПереоценка Цикл
			
		Проводка = Проводки.Вставить(0);
		
		Проводка.Период      = Дата;
		Проводка.Организация = Организация;
		Проводка.Содержание  = "Переоценка валютных остатков";
		
		// С 2010 года результат переоценки авансов в НУ не образует курсовых разниц в налоговом учете и относится на счет 99.09
		ЭтоАванс2010 = СтрокаПереоценка.ЭтоАванс И (Дата >= '20100101');
		
		Если (СтрокаПереоценка.СуммаПереоценки < 0) ИЛИ (СтрокаПереоценка.СуммаПереоценкиНУ < 0) Тогда
			
			Проводка.СчетКт = СтрокаПереоценка.Счет;
			БухгалтерскийУчет.УстановитьСубконто(СтрокаПереоценка.Счет, Проводка.СубконтоКт, 1, СтрокаПереоценка.Субконто1);
			БухгалтерскийУчет.УстановитьСубконто(СтрокаПереоценка.Счет, Проводка.СубконтоКт, 2, СтрокаПереоценка.Субконто2);
			БухгалтерскийУчет.УстановитьСубконто(СтрокаПереоценка.Счет, Проводка.СубконтоКт, 3, СтрокаПереоценка.Субконто3);
			
			Проводка.ВалютаКт = СтрокаПереоценка.Валюта;
			
			СвойстваСчетаКт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетКт);
			Если СвойстваСчетаКт.УчетПоПодразделениям Тогда
				Проводка.ПодразделениеКт = СтрокаПереоценка.Подразделение;
			КонецЕсли;
			
			Если ЭтоАванс2010 Тогда
				Проводка.СчетДт = ПланыСчетов.Хозрасчетный.ПрочиеПрибылиИУбытки;
				
				СвойстваСчетаДт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетДт);
				
				СуммаНУ = -СтрокаПереоценка.СуммаПереоценкиНУ;				
				
				Если СвойстваСчетаДт.НалоговыйУчет Тогда
					Проводка.СуммаНУДт = 0;
					Проводка.СуммаПРДт = 0;
					Проводка.СуммаВРДт = 0;
				КонецЕсли;
				
				Если СвойстваСчетаКт.НалоговыйУчет Тогда
					Проводка.СуммаНУКт = СуммаНУ;
					Проводка.СуммаПРКт = -СуммаНУ;
					Проводка.СуммаВРКт = 0;
				КонецЕсли;
				
			Иначе
					
				Проводка.СчетДт = ПланыСчетов.Хозрасчетный.ПрочиеРасходы;
				Если СтрокаПереоценка.РасчетыВУсловныхЕдиницах и НЕ СтрокаПереоценка.ПереоцениватьПоНУпосле2015 Тогда
					Проводка.СубконтоДт.ПрочиеДоходыИРасходы = СтатьяКурсовыеРазницыУЕ;
				Иначе
					Проводка.СубконтоДт.ПрочиеДоходыИРасходы = СтатьяКурсовыеРазницы;
				КонецЕсли;
				
				Проводка.Сумма = -СтрокаПереоценка.СуммаПереоценки;
				
				СвойстваСчетаДт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетДт);
				
				Если УчетнаяПолитика.ПлательщикНалогаНаПрибыль(Организация, Дата) Тогда
					СуммаНУ = -СтрокаПереоценка.СуммаПереоценкиНУ;				
					
					Если СвойстваСчетаДт.НалоговыйУчет Тогда
						Проводка.СуммаНУДт = СуммаНУ;
						Проводка.СуммаПРДт = Проводка.Сумма - СуммаНУ;
						Проводка.СуммаВРДт = 0;
					КонецЕсли;
					
					Если СвойстваСчетаКт.НалоговыйУчет Тогда
						Проводка.СуммаНУКт = СуммаНУ;
						Проводка.СуммаПРКт = Проводка.Сумма - СуммаНУ;
						Проводка.СуммаВРКт = 0;
					КонецЕсли;
					
				КонецЕсли;
					
			КонецЕсли;
			
			Если СвойстваСчетаДт.УчетПоПодразделениям Тогда
				Проводка.ПодразделениеДт = СтрокаПереоценка.Подразделение;
			КонецЕсли;
			
		Иначе
			
			Проводка.СчетДт = СтрокаПереоценка.Счет;
			БухгалтерскийУчет.УстановитьСубконто(СтрокаПереоценка.Счет, Проводка.СубконтоДт, 1, СтрокаПереоценка.Субконто1);
			БухгалтерскийУчет.УстановитьСубконто(СтрокаПереоценка.Счет, Проводка.СубконтоДт, 2, СтрокаПереоценка.Субконто2);
			БухгалтерскийУчет.УстановитьСубконто(СтрокаПереоценка.Счет, Проводка.СубконтоДт, 3, СтрокаПереоценка.Субконто3);
			
			Проводка.ВалютаДт = СтрокаПереоценка.Валюта;
			
			СвойстваСчетаДт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетДт);
			Если СвойстваСчетаДт.УчетПоПодразделениям Тогда
				Проводка.ПодразделениеДт = СтрокаПереоценка.Подразделение;
			КонецЕсли;
			
			Если ЭтоАванс2010 Тогда
				
				Проводка.СчетКт = ПланыСчетов.Хозрасчетный.ПрочиеПрибылиИУбытки;
				
				СвойстваСчетаКт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетКт);
				
				СуммаНУ = СтрокаПереоценка.СуммаПереоценкиНУ;
				
				Если СвойстваСчетаДт.НалоговыйУчет Тогда
					Проводка.СуммаНУДт = СуммаНУ;
					Проводка.СуммаПРДт = -СуммаНУ;
					Проводка.СуммаВРДт = 0;
				КонецЕсли;
				
				Если СвойстваСчетаКт.НалоговыйУчет Тогда
					Проводка.СуммаНУКт = 0;
					Проводка.СуммаПРКт = 0;
					Проводка.СуммаВРКт = 0;
				КонецЕсли;
				
			Иначе
					
				Проводка.СчетКт = ПланыСчетов.Хозрасчетный.ПрочиеДоходы;
				Если СтрокаПереоценка.РасчетыВУсловныхЕдиницах И НЕ СтрокаПереоценка.ПереоцениватьПоНУпосле2015 Тогда
					Проводка.СубконтоКт.ПрочиеДоходыИРасходы = СтатьяКурсовыеРазницыУЕ;
				Иначе
					Проводка.СубконтоКт.ПрочиеДоходыИРасходы = СтатьяКурсовыеРазницы;
				КонецЕсли;
				
				Проводка.Сумма = СтрокаПереоценка.СуммаПереоценки;
				
				СвойстваСчетаКт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетКт);
				
				Если УчетнаяПолитика.ПлательщикНалогаНаПрибыль(Организация, Дата) Тогда
					
					СуммаНУ = СтрокаПереоценка.СуммаПереоценкиНУ;			
					
					Если СвойстваСчетаДт.НалоговыйУчет Тогда
						Проводка.СуммаНУДт = СуммаНУ;
						Проводка.СуммаПРДт = Проводка.Сумма - СуммаНУ;
						Проводка.СуммаВРДт = 0;
					КонецЕсли;
					
					Если СвойстваСчетаКт.НалоговыйУчет Тогда
						Проводка.СуммаНУКт = СуммаНУ;
						Проводка.СуммаПРКт = Проводка.Сумма - СуммаНУ;
						Проводка.СуммаВРКт = 0;
					КонецЕсли;
					
				КонецЕсли;
			
			КонецЕсли;
			
			Если СвойстваСчетаКт.УчетПоПодразделениям Тогда
				Проводка.ПодразделениеКт = СтрокаПереоценка.Подразделение;
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Движения.Хозрасчетный.Записывать = Истина;
		
КонецПроцедуры

