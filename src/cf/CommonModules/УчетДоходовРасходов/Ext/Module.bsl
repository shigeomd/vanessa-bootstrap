                         |СуммаБУ = [СуммаБУ]
                         |СуммаНУ = [СуммаНУ]
                         |СуммаПР = [СуммаПР]
                         |СуммаВР = [СуммаВР]'");
						 
	ИменаСумм = Новый Массив;
	ИменаСумм.Добавить("СуммаБУ");
	ИменаСумм.Добавить("СуммаНУ");
	ИменаСумм.Добавить("СуммаПР");
	ИменаСумм.Добавить("СуммаВР");
						 
