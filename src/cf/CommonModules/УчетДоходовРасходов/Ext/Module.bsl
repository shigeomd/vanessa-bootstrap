//  Организация				 - СправочникСсылка.Организации 
//  Период					 - Дата
//  ДополнительныеПараметры	 - Структура - может содержать ключи Склад, ТипСклада, ДокументОснование, ДеятельностьНаПатенте, ЭтоУслуга
//
// Возвращаемое значение:
//   - см. РезультатОсобыйПорядокНалогообложения()
Функция РеализацияОсобыйПорядокНалогообложения(Организация, Период, ДополнительныеПараметры) Экспорт
	
	Если УчетнаяПолитика.ТолькоОсновнаяСистемаНалогообложения(Организация, Период) Тогда
		Возврат РезультатОсобыйПорядокНалогообложения(Ложь);
	КонецЕсли;
	
	Если УчетнаяПолитика.ТолькоОсобыйПорядокНалогообложения(Организация, Период) Тогда
		Возврат РезультатОсобыйПорядокНалогообложения(Истина);
	КонецЕсли;
	
	Если ДополнительныеПараметры = Неопределено Тогда
		Возврат РезультатОсобыйПорядокНалогообложения(Неопределено);
	КонецЕсли;
	
	Если ДополнительныеПараметры.Свойство("ДеятельностьНаПатенте") И ДополнительныеПараметры.ДеятельностьНаПатенте = Истина 
		И Период >= УчетУСН.ДатаНачалаДействияПатентнойСистемы() Тогда
		Возврат РезультатОсобыйПорядокНалогообложения(Истина);
	КонецЕсли;
	
	// При реализации товаров может зависеть от склада
	Если Не ДополнительныеПараметры.Свойство("ЭтоУслуга") Или ДополнительныеПараметры.ЭтоУслуга Тогда
		Возврат РезультатОсобыйПорядокНалогообложения(Неопределено);
	КонецЕсли;
	
	Если Не УчетнаяПолитика.ПлательщикЕНВД(Организация, Период) 
		Или Не УчетнаяПолитика.РозничнаяТорговляОблагаетсяЕНВД(Организация, Период) Тогда
		Возврат РезультатОсобыйПорядокНалогообложения(Неопределено);
	КонецЕсли;
	
	// Зависит от склада
	ТипСклада = Неопределено;
	Если ДополнительныеПараметры.Свойство("ТипСклада") Тогда
		
		ТипСклада = ДополнительныеПараметры.ТипСклада;
		
	ИначеЕсли ДополнительныеПараметры.Свойство("Склад") Тогда
		
		ТипСклада = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ДополнительныеПараметры.Склад, "ТипСклада");
		
	ИначеЕсли ДополнительныеПараметры.Свойство("ДокументОснование") Тогда
		
		ДокументОснование = ДополнительныеПараметры.ДокументОснование;
		
		Если ЗначениеЗаполнено(ДокументОснование)
		И Документы.ТипВсеСсылки().СодержитТип(ТипЗнч(ДокументОснование))
		И ДокументОснование.Метаданные().Реквизиты.Найти("Склад") <> Неопределено Тогда
		
			ТипСклада = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ДокументОснование, "Склад.ТипСклада");
			
		КонецЕсли;
		
	КонецЕсли;
	
	Если Справочники.Склады.ЭтоСкладРозничнойТорговли(ТипСклада) Тогда
		
		Возврат РезультатОсобыйПорядокНалогообложения(Истина, Истина);
		
	КонецЕсли;
	
	Возврат РезультатОсобыйПорядокНалогообложения(Неопределено);
	
КонецФункции

Функция РезультатОсобыйПорядокНалогообложения(ОсобыйПорядокНалогообложения = Неопределено, МожетБытьУточнен = Неопределено)
	
	Результат = Новый Структура;
	Результат.Вставить("Результат", ОсобыйПорядокНалогообложения); // Булево или Неопределено
	Если МожетБытьУточнен <> Неопределено Тогда
		Результат.Вставить("МожетБытьУточнен", МожетБытьУточнен); // Булево
	ИначеЕсли ОсобыйПорядокНалогообложения = Неопределено Тогда
		Результат.Вставить("МожетБытьУточнен", Истина);
	Иначе
		Результат.Вставить("МожетБытьУточнен", Ложь);
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

// РАСЧЕТ РЕЗЕРВОВ ПО СОМНИТЕЛЬНЫМ ДОЛГАМ

// Рассчитывает сумму резерва по сомнительным долгам для целей налогового учета за налоговый период (с начала года),
// но без ограничения, предусмотренного п. 4, ст. 266 НК РФ.
Функция СуммаРезерваПоСомнительнымДолгамНУ(Период, Организация) Экспорт
	
	Если Не УчетнаяПолитика.ФормироватьРезервыПоСомнительнымДолгамНУ(Организация, Период) Тогда
		Возврат  0;
	КонецЕсли;
	
	Организации = ОбщегоНазначенияБПВызовСервераПовтИсп.ВсяОрганизация(Организация);
	
	Результат = ПровестиРасчетРезервовПоСомнительнымДолгам(Период, Организация, Ложь, Организации);
	
	Если Результат = Неопределено Тогда
		Возврат  0;
	КонецЕсли;
	
	Возврат Результат.Выгрузить().Итог("НачисленоСНачалаГодаНУ");
	
КонецФункции
	
// Функция рассчитывает суммы резервов, а коэффициент нормирования для НУ берется в готовом виде
//                             вызывается из регламентной операции "Расчет резервов по сомнительным долгам"
//
Функция СформироватьТаблицуРасчетаРезервовПоСомнительнымДолгам(СтруктураПараметров, ТаблицаДолейКосвенныхРасходов) Экспорт
	
	Результат = ПровестиРасчетРезервовПоСомнительнымДолгам(СтруктураПараметров[0].Период, СтруктураПараметров[0].Организация);
	
	Если Результат = Неопределено Тогда
		Возврат Новый ТаблицаЗначений;
	КонецЕсли;
	
	ТаблицаРезервов = Результат.Выгрузить();
	
	// Расчет сумм резервов для НУ
	
	ТаблицаРезервов.Колонки.Добавить("НачисленоНУ");
	ТаблицаРезервов.Колонки.Добавить("ВосстановленоНУ");
	
	Если УчетнаяПолитика.ФормироватьРезервыПоСомнительнымДолгамНУ(СтруктураПараметров[0].Организация,СтруктураПараметров[0].Период) Тогда
		
		Коэффициент = ТаблицаДолейКосвенныхРасходов[0].ДоляРезервовПоСомнительнымДолгамНУ;
		
		ИтогНачисленоНУ = Окр(ТаблицаРезервов.Итог("НачисленоСНачалаГодаНУ") * Коэффициент, 2);
		ОбщегоНазначенияБПВызовСервера.РаспределитьСуммуПоКолонкеТаблицы(ИтогНачисленоНУ, ТаблицаРезервов, "НачисленоСНачалаГодаНУ");
		
		Для Каждого СтрокаРезерва Из ТаблицаРезервов Цикл
			Разница = СтрокаРезерва.НачисленоСНачалаГодаНУ - СтрокаРезерва.НачисленоРанееНУ;
			Если Разница >= 0 Тогда
				СтрокаРезерва.НачисленоНУ     = Разница;
				СтрокаРезерва.ВосстановленоНУ = 0;
			Иначе	
				СтрокаРезерва.НачисленоНУ     = 0;
				СтрокаРезерва.ВосстановленоНУ = - Разница;
			КонецЕсли;
			
		КонецЦикла;
	КонецЕсли;
		
		Возврат ТаблицаРезервов;
	
	КонецФункции

// Функция рассчитывает суммы начисления и списания резервов и коэффициент нормирования для НУ
//
Функция ПровестиРасчетРезервовПоСомнительнымДолгам(Дата, Организация, РежимФормированияПроводок = Истина, Знач Организации = Неопределено)
	
	ФормироватьБУ = УчетнаяПолитика.ФормироватьРезервыПоСомнительнымДолгамБУ(Организация, Дата);
	ФормироватьНУ = УчетнаяПолитика.ФормироватьРезервыПоСомнительнымДолгамНУ(Организация, Дата);
	
	Если НЕ ФормироватьБУ и НЕ ФормироватьНУ Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
	
	// Коэффициент нормирования рассчитывается в целом по организации, 
	// а проводки формируются каждому обособленному подразделению отдельно.
	// Поэтому, если РежимФормированияПроводок = Ложь, 
	// то должен быть передан список организаций.
	Если РежимФормированияПроводок Тогда
		// По одной организации
		Организации = Новый Массив;
		Организации.Добавить(Организация);
	КонецЕсли;
	
	ДатаКонцаМесяца         = КонецМесяца(Дата);
	ГраницаКонцаМесяца      = Новый Граница(ДатаКонцаМесяца, ВидГраницы.Включая);
	ДатаНачалаГода          = НачалоГода(Дата);
	ДатаКонцаПрошлогоМесяца = ?(Месяц(Дата) = 1, ДатаНачалаГода, КонецМесяца(НачалоМесяца(Дата) -1));
	
	// Определим счета расчетов
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	
	СчетаРасчетов = Новый Массив;
	СчетаРасчетов.Добавить(ПланыСчетов.Хозрасчетный.РасчетыСПокупателямиИЗаказчиками);//62, есть исключения
	СчетаРасчетов.Добавить(ПланыСчетов.Хозрасчетный.РасчетыСПрочимиПокупателямиИЗаказчиками); //76
	Запрос.УстановитьПараметр("СчетаРасчетов", СчетаРасчетов);
	
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	Хозрасчетный.Ссылка КАК Счет
	|ПОМЕСТИТЬ СчетаРасчетов
	|ИЗ
	|	ПланСчетов.Хозрасчетный КАК Хозрасчетный
	|ГДЕ
	|	Хозрасчетный.Ссылка В ИЕРАРХИИ(&СчетаРасчетов)
	|	И НЕ Хозрасчетный.Ссылка В ИЕРАРХИИ (ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыПоАвансамПолученным))
	|	И НЕ Хозрасчетный.Валютный
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Счет";
	Запрос.Выполнить();
	
	// Получение данных о дебиторской задолженности и уже начисленных резервах.
	// Данные о резервах также используются в следующих запросах 
	// и помещаются в менеджер временных таблиц.
	// Данные о задолженности выгружаются во временную таблицу.
	
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	
	Запрос.УстановитьПараметр("Организации",         Организации);
	Запрос.УстановитьПараметр("КонецМесяца",         ДатаКонцаМесяца);
	Запрос.УстановитьПараметр("ГраницаКонцаМесяца",  ГраницаКонцаМесяца);
	Запрос.УстановитьПараметр("ДатаНачалаГода",      ДатаНачалаГода);
	Запрос.УстановитьПараметр("КонецПрошлогоМесяца", ДатаКонцаПрошлогоМесяца);
	Запрос.УстановитьПараметр("ДатаОстатков",        ?(РежимФормированияПроводок, ДатаКонцаМесяца, ДатаКонцаПрошлогоМесяца));
	
	ВидыСубконто = Новый Массив;
	ВидыСубконто.Добавить(ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.Контрагенты);
	ВидыСубконто.Добавить(ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.Договоры);
	ВидыСубконто.Добавить(ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.ДокументыРасчетовСКонтрагентами);
	Запрос.УстановитьПараметр("ВидыСубконто", ВидыСубконто);
	
	Запрос.УстановитьПараметр("ОбщийСрокОплаты", Константы.СрокОплатыПокупателей.Получить());
	Запрос.УстановитьПараметр("ФормироватьБУ",   ФормироватьБУ);
	Запрос.УстановитьПараметр("ФормироватьНУ",   ФормироватьНУ);
	
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	Задолженность.Субконто1 КАК Контрагент,
	|	Задолженность.Субконто2 КАК Договор,
	|	Задолженность.Субконто3 КАК ДокументДолга,
	|	ЕСТЬNULL(Задолженность.СуммаОстатокДт, 0) КАК ДолгБУ,
	|	ЕСТЬNULL(Задолженность.СуммаНУОстатокДт, 0) КАК ДолгНУ
	|ПОМЕСТИТЬ Задолженность
	|ИЗ
	|	РегистрБухгалтерии.Хозрасчетный.Остатки(
	|			&ГраницаКонцаМесяца,
	|			Счет В
	|				(ВЫБРАТЬ
	|					СчетаРасчетов.Счет
	|				ИЗ
	|					СчетаРасчетов),
	|			&ВидыСубконто,
	|			Организация В (&Организации)
	|				И Субконто3 <> НЕОПРЕДЕЛЕНО) КАК Задолженность
	|ГДЕ
	|	Задолженность.СуммаОстатокДт > 0
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Контрагент,
	|	Договор,
	|	ДокументДолга
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ОстаткиРезервов.Субконто1 КАК Контрагент,
	|	ОстаткиРезервов.Субконто2 КАК Договор,
	|	ОстаткиРезервов.Субконто3 КАК ДокументДолга,
	|	ВЫБОР
	|		КОГДА &ФормироватьБУ
	|			ТОГДА ВЫБОР
	|					КОГДА &ДатаНачалаГода = &КонецПрошлогоМесяца
	|						ТОГДА ОстаткиРезервов.СуммаНачальныйОстатокКт
	|					ИНАЧЕ ОстаткиРезервов.СуммаКонечныйОстатокКт
	|				КОНЕЦ
	|		ИНАЧЕ 0
	|	КОНЕЦ КАК НачисленоРанееБУ,
	|	ВЫБОР
	|		КОГДА &ФормироватьНУ
	|			ТОГДА ВЫБОР
	|					КОГДА &ДатаНачалаГода = &КонецПрошлогоМесяца
	|						ТОГДА ОстаткиРезервов.СуммаНУНачальныйОстатокКт
	|					ИНАЧЕ ОстаткиРезервов.СуммаНУКонечныйОстатокКт
	|				КОНЕЦ
	|		ИНАЧЕ 0
	|	КОНЕЦ КАК НачисленоРанееНУ,
	|	ВЫБОР
	|		КОГДА &ФормироватьБУ
	|			ТОГДА ОстаткиРезервов.СуммаНачальныйОстатокКт
	|		ИНАЧЕ 0
	|	КОНЕЦ КАК ОстатокРезерваБУНаНачалоГода
	|ПОМЕСТИТЬ ОстаткиРезервов
	|ИЗ
	|	РегистрБухгалтерии.Хозрасчетный.ОстаткиИОбороты(
	|			&ДатаНачалаГода,
	|			&ДатаОстатков,
	|			,
	|			,
	|			Счет = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РезервыПоСомнительнымДолгам),
	|			&ВидыСубконто,
	|			Организация В (&Организации)
	|				И Субконто3 <> НЕОПРЕДЕЛЕНО) КАК ОстаткиРезервов
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Контрагент,
	|	Договор,
	|	ДокументДолга
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ТекущиеРезервы.Субконто1 КАК Контрагент,
	|	ТекущиеРезервы.Субконто2 КАК Договор,
	|	ТекущиеРезервы.Субконто3 КАК ДокументДолга,
	|	ТекущиеРезервы.СуммаОстатокКт КАК ОстатокРезерваБУ,
	|	ТекущиеРезервы.СуммаНУОстатокКт КАК ОстатокРезерваНУ
	|ПОМЕСТИТЬ ТекущиеРезервы
	|ИЗ
	|	РегистрБухгалтерии.Хозрасчетный.Остатки(
	|			&ГраницаКонцаМесяца,
	|			Счет = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РезервыПоСомнительнымДолгам),
	|			&ВидыСубконто,
	|			Организация В (&Организации)
	|				И Субконто3 <> НЕОПРЕДЕЛЕНО) КАК ТекущиеРезервы
