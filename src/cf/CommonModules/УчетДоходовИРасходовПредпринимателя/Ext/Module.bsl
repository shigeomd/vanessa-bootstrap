			НоваяСтрока.НДС        = Партия.НДСНачисленный;
		КонецЕсли;
		
	КонецЦикла;
	
	СтруктураТаблиц.СписокМПЗ            = СписокМПЗ;
	СтруктураТаблиц.СписокМПЗОтгруженные = СписокМПЗОтгруженные;
	
