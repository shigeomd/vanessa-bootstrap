	СуммаДохода = 0;
	
	Если Не УчетнаяПолитика.ПлательщикНДФЛЗаПериод(Организация, ДатаНачала, ДатаОкончания) Тогда
		Возврат СуммаДохода;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("Организация",   Организация);
	Запрос.УстановитьПараметр("НачалоПериода", НачалоДня(ДатаНачала));
	Запрос.УстановитьПараметр("КонецПериода",  Новый Граница(КонецДня(ДатаОкончания), ВидГраницы.Включая));
	Запрос.УстановитьПараметр("СписокХарактеровДеятельности", ХарактерыДеятельностиОСН());
	
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ЕСТЬNULL(СУММА(ВсеДоходы.СуммаДохода), 0) КАК СуммаДохода
	|ИЗ
	|	(ВЫБРАТЬ
	|		ИПДоходыОбороты.ВыручкаОборот - ИПДоходыОбороты.НДСНачисленныйОборот КАК СуммаДохода
	|	ИЗ
	|		РегистрНакопления.ИПДоходы.Обороты(
	|				&НачалоПериода,
	|				&КонецПериода,
	|				,
	|				Организация = &Организация
	|					И ХарактерДеятельности В (&СписокХарактеровДеятельности)
	|					И ДокументОплаты <> НЕОПРЕДЕЛЕНО) КАК ИПДоходыОбороты
	|	
	|	ОБЪЕДИНИТЬ ВСЕ
	|	
	|	ВЫБРАТЬ
	|		ИППрочиеДоходыОбороты.СуммаОборот
	|	ИЗ
	|		РегистрНакопления.ИППрочиеДоходы.Обороты(
	|				&НачалоПериода,
	|				&КонецПериода,
	|				,
	|				Организация = &Организация
	|					И ХарактерДеятельности В (&СписокХарактеровДеятельности)
	|					И ВЫРАЗИТЬ(СтатьяДоходов КАК Справочник.ПрочиеДоходыИРасходы).ПринятиеКналоговомуУчету) КАК ИППрочиеДоходыОбороты) КАК ВсеДоходы";
	
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		СуммаДохода = Выборка.СуммаДохода;
	КонецЕсли;
	
	Возврат СуммаДохода;
	
