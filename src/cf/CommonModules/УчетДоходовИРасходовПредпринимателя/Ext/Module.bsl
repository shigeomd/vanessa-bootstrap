		|	ИПМПЗОтгруженныеОстатки.ДокументОтгрузки КАК ДокументОтгрузки,
		|	ИПМПЗОтгруженныеОстатки.КоличествоОстаток КАК КоличествоОстаток,
		|	ИПМПЗОтгруженныеОстатки.СуммаОстаток КАК СуммаОстаток,
		|	ИПМПЗОтгруженныеОстатки.НДСОстаток КАК НДСОстаток,
		|	ИПМПЗОтгруженныеОстатки.ВыручкаОстаток КАК ВыручкаОстаток,
		|	ИПМПЗОтгруженныеОстатки.НДСНачисленныйОстаток КАК НДСНачисленныйОстаток,
		|	ВЫБОР
		|		КОГДА ИПМПЗОтгруженныеОстатки.ДокументОплаты = НЕОПРЕДЕЛЕНО
		|			ТОГДА 1
		|		ИНАЧЕ 0
		|	КОНЕЦ КАК ПорядокПогашения
		|ИЗ
		|	РегистрНакопления.ИПМПЗОтгруженные.Остатки(
		|			&Период,
		|			Организация = &Организация
		|				И ДокументОтгрузки В
		|					(ВЫБРАТЬ РАЗЛИЧНЫЕ
		|						ВТ_ПрочиеРасчетыОстатки.РасчетныйДокумент КАК ДокументОтгрузки
		|					ИЗ
		|						ВТ_ПрочиеРасчетыОстатки КАК ВТ_ПрочиеРасчетыОстатки)) КАК ИПМПЗОтгруженныеОстатки
		|
		|УПОРЯДОЧИТЬ ПО
		|	ПорядокПогашения";
		
	Результаты = Запрос.ВыполнитьПакет();
	РезультатПрочиеРасчеты		= Результаты[1];
	РезультатИПМПЗОтгруженные	= Результаты[2];
	
	Если РезультатПрочиеРасчеты.Пустой() Тогда
		Возврат ТаблицыСписанияМПЗ;
	КонецЕсли;
	
	ТаблицаИПМПЗОтгруженные	= Движения.ИПМПЗОтгруженные.ВыгрузитьКолонки();
	
	ОтборПлатежей	= Новый Структура("Контрагент, ДоговорКонтрагента, СчетУчета");
	РасшифровкаПлатежа.Индексы.Добавить("Контрагент, ДоговорКонтрагента, СчетУчета");
	
	ТаблицаИПМПЗОстатки		= РезультатИПМПЗОтгруженные.Выгрузить();
	ТаблицаИПМПЗОстатки.Индексы.Добавить("ДокументОтгрузки");
	ОтборОстатков	= Новый Структура("ДокументОтгрузки");
	
	Выборка	= РезультатПрочиеРасчеты.Выбрать();
	Пока Выборка.Следующий() Цикл
		
		ЗаполнитьЗначенияСвойств(ОтборПлатежей, Выборка);
		НайденныеПлатежи	= РасшифровкаПлатежа.НайтиСтроки(ОтборПлатежей);
		
		ОтборОстатков.ДокументОтгрузки	= Выборка.РасчетныйДокумент;
		НайденныеОстатки	= ТаблицаИПМПЗОстатки.НайтиСтроки(ОтборОстатков);
		
		Для каждого Платеж Из НайденныеПлатежи Цикл
			
			СуммаОплаты = Мин(Выборка.СуммаПоПрочимРасчетам, Платеж.СуммаРуб);
			Если СуммаОплаты = 0 Тогда
				Продолжить;
			КонецЕсли;
			
			Платеж.СуммаРуб	= Платеж.СуммаРуб - СуммаОплаты;
			
			ПрочиеРасчеты	= ТаблицаПрочиеРасчеты.Добавить();
			ЗаполнитьЗначенияСвойств(ПрочиеРасчеты, Реквизиты);
			ЗаполнитьЗначенияСвойств(ПрочиеРасчеты, Выборка);
			ПрочиеРасчеты.Сумма	= СуммаОплаты;
			ПрочиеРасчеты.ВидДвижения = ВидДвиженияНакопления.Расход;
			
			// Если документ оплаты "Оплата платежной картой", значит реализации по этому документу не было
			// а значит по этому объекту не должно возникать доходов ИП
			// но т.к. мы когда-нибудь закроем этот аванс отгрузкой, то в регистр прочих расчетов
			// нужно записать поступление на р/с
			Если Выборка.ЭтоОплатаПлатежнойКартой Тогда
				
				ПрочиеРасчеты	= ТаблицаПрочиеРасчеты.Добавить();
				ЗаполнитьЗначенияСвойств(ПрочиеРасчеты, Реквизиты);
				ПрочиеРасчеты.Контрагент		= 
					ОбщегоНазначения.ЗначениеРеквизитаОбъекта(
						Выборка.РасчетныйДокумент, "Контрагент");
				ПрочиеРасчеты.РасчетныйДокумент	= ПрочиеРасчеты.Регистратор;
				ПрочиеРасчеты.ВидДвижения		= ВидДвиженияНакопления.Приход;
				ПрочиеРасчеты.Сумма				= СуммаОплаты;
				
			Иначе	
			
				ДокументОплаты	= ТаблицаВзаиморасчеты.Добавить();
				ДокументОплаты.Контрагент				= Выборка.Контрагент;
				ДокументОплаты.ДокументРасчетов			= Реквизиты.Регистратор;//Выборка.РасчетныйДокумент;
				ДокументОплаты.ДатаДокументаРасчетов	= Реквизиты.Период;//Выборка.ДатаРасчетногоДокумента;
				ДокументОплаты.СуммаРуб					= СуммаОплаты;
				
			КонецЕсли;	
			
			Для каждого Остаток Из НайденныеОстатки Цикл
				
				Если Остаток.ВыручкаОстаток = 0 Тогда
					Продолжить;
				КонецЕсли;
				
				СтрокаМПЗ	= ТаблицаИПМПЗОтгруженные.Добавить();
				ЗаполнитьЗначенияСвойств(СтрокаМПЗ, Остаток);
				
				Если СуммаОплаты >= Остаток.ВыручкаОстаток Тогда
					
					СтрокаМПЗ.Количество		= Остаток.КоличествоОстаток;
					СтрокаМПЗ.Сумма				= Остаток.СуммаОстаток;
					СтрокаМПЗ.НДС				= Остаток.НДСОстаток;
					СтрокаМПЗ.Выручка			= Остаток.ВыручкаОстаток;
					СтрокаМПЗ.НДСНачисленный	= Остаток.НДСНачисленныйОстаток;
					
				Иначе
					
					СуммаСНДС		= Окр((Остаток.СуммаОстаток + Остаток.НДСОстаток) * СуммаОплаты/Остаток.ВыручкаОстаток, 2, 1);
					ВыручкаБезНДС	= Окр((Остаток.ВыручкаОстаток - Остаток.НДСНачисленныйОстаток) * СуммаОплаты/Остаток.ВыручкаОстаток, 2, 1);
					
					СтрокаМПЗ.Количество		= Окр(Остаток.КоличествоОстаток * СуммаОплаты/Остаток.ВыручкаОстаток, 3, 1);
					СтрокаМПЗ.Сумма				= Окр(Остаток.СуммаОстаток * СуммаОплаты/Остаток.ВыручкаОстаток, 2, 1);
					СтрокаМПЗ.НДС				= СуммаСНДС - СтрокаМПЗ.Сумма;
					СтрокаМПЗ.Выручка			= СуммаОплаты;
					СтрокаМПЗ.НДСНачисленный	= СтрокаМПЗ.Выручка - ВыручкаБезНДС;
					
				КонецЕсли;
				
				СуммаОплаты	= СуммаОплаты - СтрокаМПЗ.Выручка;
				
				Остаток.КоличествоОстаток		= Остаток.КоличествоОстаток - СтрокаМПЗ.Количество;
				Остаток.СуммаОстаток			= Остаток.СуммаОстаток - СтрокаМПЗ.Сумма;
				Остаток.НДСОстаток				= Остаток.НДСОстаток - СтрокаМПЗ.НДС;
				Остаток.ВыручкаОстаток			= Остаток.ВыручкаОстаток - СтрокаМПЗ.Выручка;
				Остаток.НДСНачисленныйОстаток	= Остаток.НДСНачисленныйОстаток - СтрокаМПЗ.НДСНачисленный;
				
				Если СуммаОплаты = 0 Тогда
					Прервать;
				КонецЕсли;
				
			КонецЦикла;
		
		КонецЦикла;
		
	КонецЦикла;
	
	ТаблицыСписанияМПЗ.ТаблицаВзаиморасчеты		= ТаблицаВзаиморасчеты;
	ТаблицыСписанияМПЗ.ТаблицаИПМПЗОтгруженные	= ТаблицаИПМПЗОтгруженные;
	ТаблицыСписанияМПЗ.ТаблицаПрочиеРасчеты		= ТаблицаПрочиеРасчеты;
	
	Возврат ТаблицыСписанияМПЗ;
	
