	Для каждого МПЗ Из СписокМПЗ Цикл
		
		ИзменениеКоличества = МПЗ.ИзменениеКоличества;
		ИзменениеСуммы      = МПЗ.ИзменениеСуммы;
		ИзменениеНДС        = МПЗ.ИзменениеНДС;
		
		Если ИзменениеКоличества > 0 Тогда
			// Увеличение количества отгруженных производится общим алгоритмом списания МПЗ
			Продолжить;
		КонецЕсли;
		
		ЗаполнитьЗначенияСвойств(Отбор, МПЗ);
		ОборотыМПЗ = ТаблицаОборотов.НайтиСтроки(Отбор);
		Если ОборотыМПЗ.Количество() = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		Оборот = ОборотыМПЗ[0];
		
		Количество = Мин(-ИзменениеКоличества, Оборот.КоличествоРасход);
		Если Количество = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		Если Количество = Оборот.КоличествоРасход Тогда
			КоличествоВСтроке = Оборот.КоличествоРасход;
			СуммаВСтроке      = Оборот.СуммаРасход;
			НДСВСтроке        = Оборот.НДСРасход;
		Иначе
			КоличествоВСтроке = Количество;
			СуммаВСтроке      = Окр(Оборот.СуммаРасход * Количество / Оборот.КоличествоРасход, 2, 1);
			СуммаСНДСВСтроке  = Окр((Оборот.СуммаРасход + Оборот.НДСРасход) * Количество / Оборот.КоличествоРасход, 2, 1);
			НДСВСтроке        = СуммаСНДСВСтроке - СуммаВСтроке;
		КонецЕсли;
		
		СписаниеМПЗ = ТаблицаСписанияМПЗ.Добавить();
		ЗаполнитьЗначенияСвойств(СписаниеМПЗ, Оборот);
		СписаниеМПЗ.Корректировка = Истина;
		СписаниеМПЗ.Количество    = -КоличествоВСтроке;
		СписаниеМПЗ.Сумма         = -СуммаВСтроке;
		СписаниеМПЗ.НДС           = -НДСВСтроке;
		
	КонецЦикла;
	
	Возврат ТаблицаСписанияМПЗ;
	
