				СуммаПриход      = Оборот.СуммаПриход;
				НДСПриход        = Оборот.НДСПриход;
			Иначе
				Коэффициент = СуммаОплатыПриход / (Оборот.СуммаПриход + Оборот.НДСПриход);
				СуммаСНДСПриход  = Окр((Оборот.СуммаПриход + Оборот.НДСПриход) * Коэффициент, 2, 1);
