		Если НайденныеОбороты.Количество() = 0 Тогда
			Продолжить;
		КонецЕсли;
		Оборот = НайденныеОбороты[0];
		
		СуммаОплатыПриход = Мин(Оплата.Сумма + Оплата.НДС, Оборот.СуммаПриход + Оборот.НДСПриход);
		
