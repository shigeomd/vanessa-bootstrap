// Прочие процедуры служебного программного интерфейса.

// Актуализирует данные подсистемы с учетом режима работы программы.
//   Пример использования: после очистки хранилищ настроек.
Процедура Обновить(Настройки = Неопределено) Экспорт
	
	Если Настройки = Неопределено Тогда
		Настройки = Новый Структура("ОбщиеДанные, РазделенныеДанные");
		
		РежимРаботы = ОбщегоНазначенияПовтИсп.РежимРаботыПрограммы();
		Если РежимРаботы.МодельСервиса Тогда
			Если ОбщегоНазначения.ИспользованиеРазделителяСеанса() Тогда
				Настройки.ОбщиеДанные       = Ложь;
				Настройки.РазделенныеДанные = Истина;
			Иначе
				Настройки.ОбщиеДанные       = Истина;
				Настройки.РазделенныеДанные = Ложь;
			КонецЕсли;
		Иначе
			Если РежимРаботы.Автономный Тогда
				Настройки.ОбщиеДанные       = Ложь;
				Настройки.РазделенныеДанные = Истина;
			Иначе
				Настройки.ОбщиеДанные       = Истина;
				Настройки.РазделенныеДанные = Истина;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	Если Настройки.ОбщиеДанные = Истина Тогда
		ПараметрыОбновления = Новый Структура("РазделенныеОбработчики");
		ПараметрыОбновления.РазделенныеОбработчики = ОбновлениеИнформационнойБазы.НоваяТаблицаОбработчиковОбновления();
		ОбновитьОбщиеДанные(ПараметрыОбновления);
		ОтложенноеПолноеОбновлениеОбщихДанных(ПараметрыОбновления);
	КонецЕсли;
	
	Если Настройки.РазделенныеДанные = Истина Тогда
		ОбновитьРазделенныеДанные();
		ОтложенноеПолноеОбновлениеРазделенныхДанных();
	КонецЕсли;
	
